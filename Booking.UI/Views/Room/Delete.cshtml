@model Booking.Core.DTO.RoomDTO

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>
<dl class="row">
    <dt class="col-sm-2">
        RoomNum
    </dt>
    <dd class="col-sm-10">
        @Model.RoomNum
    </dd>

    <!-- Include other properties you want to display for confirmation -->

    <dt class="col-sm-2">
        Price
    </dt>
    <dd class="col-sm-10">
        @Model.Price
    </dd>

    <!-- Include other properties you want to display for confirmation -->

</dl>

<form asp-action="Delete" asp-route-id="@Model.ID" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
